{
  "name": "ez-phase",
  "version": "1.1.3",
  "description": "Easy Haplotype Phasing - Advanced GUI for PHASE 2.1.1 with Enhanced File Management and Parallel Processing",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-all": "electron-builder --mac --win --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "bioinformatics",
    "haplotype",
    "phasing",
    "genetics",
    "PHASE"
  ],
  "author": "Jesse S. Barrington <jsbarrington@github.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/JSBarrington/ez-phase.git"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.jsbarrington.ez-phase",
    "productName": "EZ-PHASE",
    "buildResources": "resources",
    "files": [
      "**/*",
      "!dist/",
      "!docs/",
      "!.github/",
      "!.vscode/",
      "!*.log"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "icon": "resources/icon.icns",
      "category": "public.app-category.education",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "win": {
      "icon": "resources/icon.ico",
      "target": "nsis"
    },
    "linux": {
      "icon": "resources/icon.png",
      "target": "AppImage"
    }
  }
}
