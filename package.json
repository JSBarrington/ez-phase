{
  "name": "ez-phase",
  "version": "1.1.1",
  "description": "Easy Haplotype Phasing - Advanced GUI for PHASE 2.1.1 with Enhanced File Management and Parallel Processing",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --inspect",
    "build-mac": "electron-builder --mac",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux",
    "build-all": "electron-builder --mac --win --linux",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Jesse S. Barrington <jsbarrington@github.com>",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.jsbarrington.ez-phase",
    "productName": "EZ-PHASE",
    "copyright": "Copyright Â© 2025 Jesse S. Barrington",
    "buildResources": "resources",
    "files": [
      "**/*",
      "!docs/**/*",
      "!.github/**/*",
      "!README.md",
      "!dist/**/*",
      "!node_modules/.cache/**/*",
      "!*.log",
      "!entitlements.mac.plist"
    ],
    "mac": {
      "icon": "resources/icon.icns",
      "category": "public.app-category.education",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "win": {
      "icon": "resources/icon.ico",
      "target": "nsis",
      "publisherName": "Jesse S. Barrington"
    },
    "linux": {
      "icon": "resources/icon.png",
      "target": "AppImage",
      "category": "Science"
    }
  }
}
