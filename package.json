{
  "name": "ez-phase",
  "version": "1.10.0",
  "description": "Easy Haplotype Phasing - Advanced GUI for PHASE 2.1.1 with Enhanced File Management and Parallel Processing",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --inspect",
    "build-mac": "electron-builder --mac",
    "build-win": "electron-builder --win", 
    "build-linux": "electron-builder --linux",
    "dist": "electron-builder --publish=never",
    "build-all": "electron-builder --mac --win --linux",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "echo \"Linting not configured\" && exit 0"
  },
  "author": "Jesse S. Barrington <jsbarrington@github.com>",
  "license": "MIT", 
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.jsbarrington.ez-phase",
    "productName": "EZ-PHASE",
    "copyright": "Copyright Â© 2024 Jesse S. Barrington",
    "directories": {
      "output": "dist",
      "buildResources": "resources"
    },
    "files": [
      "**/*",
      "!docs/**/*", 
      "!dist/**/*",
      "!.github/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/bin",
        "to": "bin",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.education",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage", 
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"] 
        }
      ]
    }
  }
}